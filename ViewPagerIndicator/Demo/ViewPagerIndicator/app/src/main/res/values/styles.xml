<resources>


    <!-- 自定义指定器样式-->
    <style name="StyledIndicator" parent="@android:style/Theme.Light">
        <item name="vpiTabPagerIndicatorStyle">@style/CustomTabPagerIndicator</item>
        <item name="vpiLinePagerIndicatorStyle">@style/CustomLinePagerIndicator</item>
        <item name="vpiUnderlinePagerIndicatorStyle">@style/CustomUnderlinePagerIndicator</item>
        <item name="vpiCirclePagerIndicatorStyle">@style/CustomCirclePagerIndicator</item>
        <item name="vpiTitlePagerIndicatoerStyle">@style/CustomTitlePagerIndicator</item>
    </style>


    <!-- 自定义样式的tabs指示器-->
    <style name="CustomTabPagerIndicator" parent="Widget.TabPagerIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPagerIndicator.Text</item>
        <item name="android:textColor">#FF555555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:dividerPadding">1.5dip</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>


    <!-- 自定义tabs中字体样式设置-->
    <style name="CustomTabPagerIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <!-- 自定义样式的lines指示器-->
    <style name="CustomLinePagerIndicator">
        <item name="strokeWidth">4dp</item>
        <item name="lineWidth">30dp</item>
        <item name="unselectedColor">#FF888888</item>
        <item name="selectedColor">#FF880000</item>
    </style>

    <!-- 自定义样式的underlines指示器-->
    <style name="CustomUnderlinePagerIndicator">
        <item name="selectedColor">#FFCC0000</item>
        <item name="android:background">#FFCCCCCC</item>
        <item name="fadeLength">1000</item>
        <item name="fadeDelay">1000</item>
    </style>

    <!-- 自定义样式的circles指示器-->
    <style name="CustomCirclePagerIndicator">
        <item name="fillColor">#FF888888</item>
        <item name="strokeColor">#FF000000</item>
        <item name="strokeWidth">2dp</item>
        <item name="radius">10dp</item>
        <item name="centered">true</item>
    </style>

    <!-- 自定义样式的titles指示器-->
    <style name="CustomTitlePagerIndicator">
        <item name="android:background">#18FF0000</item>
        <item name="footerColor">#FFAA2222</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">#AA000000</item>
        <item name="selectedColor">#FF000000</item>
        <item name="selectedBold">true</item>
    </style>


</resources>
